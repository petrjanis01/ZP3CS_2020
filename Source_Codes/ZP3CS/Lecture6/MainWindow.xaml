<Window x:Class="Lecture6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lecture6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Grid>
		<TextBlock HorizontalAlignment="Left" Margin="231,80,0,0" TextWrapping="Wrap" Text="Select a message option and then choose the Display button." VerticalAlignment="Top" Height="17" Width="327"/>
		<RadioButton x:Name="HelloButton" Content="Hello" IsChecked="True" HorizontalAlignment="Left" Margin="277,149,0,0" VerticalAlignment="Top"/>
		<RadioButton x:Name="GoodbyeButton" Content="Goodbye" HorizontalAlignment="Left" Margin="468,149,0,0" VerticalAlignment="Top"/>
		<Button Content="Display" Name="DisplayButton" HorizontalAlignment="Left" Margin="352,201,0,0" VerticalAlignment="Top" Width="75" Click="DisplayButton_Click"/>
		<Button Content="Navigate to users window"  Name="UsersNavigationButton" HorizontalAlignment="Left" Margin="312,340,0,0" VerticalAlignment="Top" Width="154" Height="37" Click="UsersNavigationButton_Click"/>
	</Grid>
</Window>
